<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.172-ea"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.RootLayoutController"
            maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="800.0" prefWidth="1300.0">
   <top>
       <MenuBar BorderPane.alignment="CENTER">
           <Menu mnemonicParsing="false" text="Файл">
               <MenuItem fx:id="itmLoad" mnemonicParsing="false" onAction="#handleLoad" text="Загрузить" />
               <SeparatorMenuItem mnemonicParsing="false" />
               <MenuItem fx:id="itmExit" mnemonicParsing="false" onAction="#handleItmExit" text="Выход" />
           </Menu>
           <Menu mnemonicParsing="false" text="Просмотр">
               <MenuItem onAction="#handleSourceImage" userData="SOURCE" mnemonicParsing="false" text="Оригинал" />
               <SeparatorMenuItem mnemonicParsing="false" />
               <MenuItem onAction="#handleSourceImage" userData="CURRENT" mnemonicParsing="false" text="Текущее" />
           </Menu>
       </MenuBar>
   </top>
</BorderPane>
